@page "/Create/Meeting/User/{idUser}"
@using WebAppMeet.Data.Models;
@inherits MeetingCreationComponentBase



<EditForm Model="CreateModel" OnSubmit="CreateMeeting">

<div class="container-fluid">
    <div class="center-container">
        <h3>Meeting Scheduling</h3>
<CheckUsercComponent  @ref="CheckUserComponentBase">

</CheckUsercComponent>
        <div class="form-group">
            <div class="form-label">
                <label for="@CreateModel.UserId">@nameof(CreateModel.UserId)</label>
            </div>
            <div class=" ">
                <InputText class="centerItemMax offsetInputUp w-auto d-inline"  @bind-Value="CreateModel.UserId" DisplayName="@CreateModel.UserId" disabled></InputText>
            </div>
        </div>
        <div class="form-group">
            <div class="form-label">
                <label for="@CreateModel.Date">@nameof(CreateModel.Date)</label>
            </div>
            <div class=" ">
                   <input type="datetime-local" value="@CreateModel.Date.ToString("yyyy-MM-ddTHH:mm:ss")" 
                            class="form-control  styledInput w-auto d-inline"
                                @onchange="SetDate" />
            </div>
        </div>
        
        <div class="form-group">
            <div class="form-label">
                <label for="@CreateModel.Description">@nameof(CreateModel.Description)</label>
            </div>
            <div class=" ">
                <InputText  class="centerItemMax offsetInputUp w-auto d-inline" @bind-Value="CreateModel.Description" DisplayName="@CreateModel.Description" ></InputText>
            </div>
        </div>
        <div  class="flexContainer">
              <button class="btn btn-primary centerItem"   type="submit">Create</button>
        </div>
    </div>

</div>
</EditForm>
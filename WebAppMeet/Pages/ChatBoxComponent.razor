@inherits ChatBoxComponentBase

<div class="container" style="margin-top:10%;">
    
        <h4>Chat</h4>
        
            @if(!MessageList.Any())
            {
                <span>No messages</span>
            }
            else
            {
                var text = string.Join("\n", MessageList);

                <div style="float: left; width: 80%;">
                        <textarea   disabled  style="width:100%; max-width: 100%;height:236px"  >@text  </textarea>
                </div>
            }
        
    <section class="col-md-2" >
         <div class="row">
             <textarea style="height:236px;resize: none;" @bind=Message  @bind:event="oninput" @onkeydown="OnKeyPressed"></textarea>
        </div>
        <div>
            <a class="btn btn-success"  @onclick="OnButtonSend" >Send</a>
        </div>
    </section>
</div>


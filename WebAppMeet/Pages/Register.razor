@page "/Register"
@inherits WebAppMeet.Components.Components.RegisterBase

<EditForm Model="UserCreationModel" OnSubmit="CreateUser">
<div class="container-fluid">
    <div class="center-container">
        <h3>Register</h3>
         <div class="form-group">
             <label>Email</label>
            <div class="form-control centerItem">
                  
                  <InputText class="centerItemMax" @bind-Value="@UserCreationModel.Email" ></InputText>
                  <ValidationMessage For="()=>UserCreationModel.Email" ></ValidationMessage>
            </div>
        </div>
        <div class="form-group">
            <label>Password</label>
             <div class="form-control">
                    <InputText class="centerItemMax" type="password"  @bind-Value="@UserCreationModel.Password" ></InputText>
                    <ValidationMessage For="()=>UserCreationModel.Password" ></ValidationMessage>
            </div>
        </div>
<div  class="flexContainer">
    <button class="btn btn-primary centerItem"   type="submit">Register</button>
</div>
    </div>

</div>

</EditForm>


@page "/Meeting/{MeetingId:int}"
@using Microsoft.AspNetCore.SignalR.Client;
@using WebAppMeet.Components.Helper;
@using Newtonsoft.Json;
@using WebAppMeet.Data.Models;
@inherits MeetingComponentBase;
@inject IHttpContextAccessor  httpContextAccesor;
@implements IDisposable
@inject NavigationManager nav;
<MeetingAttendantsComponent @ref="_MeetingAttentandantsComponentBase"  />
<ChatRoomComponent MeetingId="MeetingId" @ref=ChatRoom OnChatboxUserTyping="OnUserTyping">

</ChatRoomComponent>

<FadeInNotificationComponent @ref="FadeNotification"></FadeInNotificationComponent>
@code {
   
    
    private static Action _OnMeetingClosed;
    public FadeInNotificationComponent FadeNotification { get; set; } = new FadeInNotificationComponent();
    protected async Task OnUserTyping(string message)
    {
        bool typing = !message.Contains("Enter");
        await  hub.SendAsync("UserTypes", MeetingId, User.Email,typing);

    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                _module = await JS.InvokeAsync<IJSObjectReference>(
                "import", "./js/InterOpLib.js");
            }
            catch (Exception)
            {

            }

            var token = await base.TryGetToken();
            _AuthenticationState = await _state.GetAuthenticationStateAsync("jwt", token);
            var user = _AuthenticationState.User?.Identity?.Name;
            ChatRoom.User = this.User = _userManager.Users.FirstOrDefault(x => x.Email.Contains(user));



            if (hub is null)
                hub = new HubConnectionBuilder()
                    .WithUrl($"https://localhost:7044/ConnectionsHub?access_token={token}"/*_NavigationManager.ToAbsoluteUri($"/ConnectionsHub?access_token={token}")*/, options =>
                    {
                        options.AccessTokenProvider = () => Task.FromResult(token);
                        options.UseDefaultCredentials = false;
                        //options.Credentials =
                        options.Credentials = System.Net.CredentialCache.DefaultCredentials;
                        options.Headers.Add("Authorization", $"Bearer {token}");
                    })
                .WithAutomaticReconnect()
                    .Build();
            HubOnReceiveMessageDelegate = ChatRoom.OnReceiveMessage;
            hub.On<string, string>("ReceiveMessage", ( name, message) => 
            {
                
               // StartTimer();
                ChatRoom.OnReceiveMessage(name, message); 
            });

            hub.On<int, string,string>("JoinedRoom",async  (roomid, id,name) =>
            {
                if (!_MeetingAttentandantsComponentBase.Attendants.ContainsKey(id))
                {
                    FadeNotification.DisplayText(name, $"Online");
                    _MeetingAttentandantsComponentBase.Attendants.Add(id, name);
                    await _MeetingAttentandantsComponentBase.ComponentStateHasChangedAsync();
                }
            });

            hub.On<string, string>("JoinedUsers", async (userId, email) =>
            {
                if (!_MeetingAttentandantsComponentBase.Attendants.ContainsKey(userId))
                {
                    _MeetingAttentandantsComponentBase.Attendants.Add(userId, email.ToLower());
                    await _MeetingAttentandantsComponentBase.ComponentStateHasChangedAsync();
                }
            });
            hub.On<int,string>("LeavingRoom", async (roomid,id) =>
            {
                if (_MeetingAttentandantsComponentBase.Attendants.ContainsKey(id) && User.Id!=id)
                {
                    FadeNotification.DisplayText(_MeetingAttentandantsComponentBase.Attendants[id], $"Offline");
                    _MeetingAttentandantsComponentBase.Attendants.Remove(id);
                    await _MeetingAttentandantsComponentBase.ComponentStateHasChangedAsync();
                }
            });



            hub.On<int, string,bool>("UserTyping", async (roomid, username,isTyping) =>
            {
                if (username != User.Email)
                {
                    ChatRoom.ChatBox.UserActivityIndicatorComponent.messageActivity = isTyping ? $"{username} is typing..." : "";
                    await ChatRoom.ChatBox.UserActivityIndicatorComponent.ComponentStateHasChangedAsync();
                }
            });

            // hub.On<string, string>("ReceiveMessage", ChatRoom.HubOnReceiveMessageDelegate);
            var containsCookies = this.httpContextAccesor.HttpContext.Request.Cookies;
            var cookie = containsCookies["Application.Identity"];
            ChatRoom.hub = hub;
            //hub.ServerTimeout = TimeSpan.FromMilliseconds(100000);
            await hub.StartAsync();

            if(_OnMeetingClosed==null)
                _OnMeetingClosed = OnMeetingClosed;

        }
        else
        {
            if (ChatRoom?.User != null)
            {
                this.User  = _userManager.Users.First(x => x.UserName == ChatRoom.User.UserName);
                if ( !_MeetingAttentandantsComponentBase.Attendants.ContainsKey(User?.Id))
                {
                    await hub.SendAsync("JoinRoom",MeetingId, User.Id, ChatRoom?.User.UserName);

                    await hub.SendAsync("GetCurrentUsers", MeetingId);
                }
            }
            if(_OnMeetingClosed==null)
                _OnMeetingClosed = OnMeetingClosed;
        }
    }

    void OnMeetingClosed()
    {
        OnUserTyping("Enter");

        if (User != null && _MeetingAttentandantsComponentBase.Attendants.ContainsKey
         (User?.Id))
        {
            this.
            hub.SendAsync("LeaveRooom", MeetingId, User.Id).GetAwaiter().GetResult();
        }
    }

    [JSInvokable("ReturnDataAsync1")]
    public static Task<string> ReturnDataAsync()
    {

        //This line appears in server console.
        Console.WriteLine("Hello from server");
        _OnMeetingClosed?.Invoke();
        return Task.FromResult("Hello");
    }

    public void Dispose()
    {
        if (User !=null && _MeetingAttentandantsComponentBase.Attendants.ContainsKey
         (User?.Id))
        {
            this.
            hub.SendAsync("LeaveRooom", MeetingId, User.Id).GetAwaiter().GetResult();
        }
    }

}
